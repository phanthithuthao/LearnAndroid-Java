<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTenLable"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:text="Ten: "
        android:textSize="13pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvTuoiLable"
        />

    <TextView
        android:id="@+id/tvTen"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:textSize="13pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTenLable"
        app:layout_constraintTop_toTopOf="@id/tvTenLable" />

    <TextView
        android:id="@+id/tvTuoiLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFF"
        android:text="Tuoi: "
        android:textColor="#FF0000"
        android:textSize="13pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTenLable" />

    <TextView
        android:id="@+id/tvTuoi"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:background="#00FFFF"
        android:textSize="13pt"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTuoiLable"
        app:layout_constraintTop_toTopOf="@id/tvTuoiLable" />
</androidx.constraintlayout.widget.ConstraintLayout>