<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTieuDe"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:background="#FFFF00"
        android:gravity="center_horizontal"
        android:text="THONG TIN SINH VIEN"
        android:textColor="#FF0000"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMaSV"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:text="Ma sinh vien: "
        android:textSize="14pt"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/etTenSV"
        app:layout_constraintLeft_toLeftOf="@id/tvTieuDe"
        app:layout_constraintTop_toBottomOf="@id/tvTieuDe" />

    <EditText
        android:id="@+id/etMaSV"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:textSize="14pt"
        app:layout_constraintLeft_toRightOf="@id/tvMaSV"
        app:layout_constraintRight_toRightOf="@id/tvTieuDe"
        app:layout_constraintTop_toTopOf="@id/tvMaSV" />
    <TextView
        android:id="@+id/tvTenSV"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:text="Ten Sinh Vien: "
        android:textSize="14pt"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/etTenSV"
        app:layout_constraintLeft_toLeftOf="@id/tvMaSV"
        app:layout_constraintTop_toBottomOf="@id/tvMaSV" />

    <EditText
        android:id="@+id/etTenSV"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:textSize="14pt"
        app:layout_constraintLeft_toRightOf="@id/tvTenSV"
        app:layout_constraintRight_toRightOf="@id/etUserName"
        app:layout_constraintTop_toTopOf="@id/tvTenSV" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gui"
        android:textSize="14pt"
        android:id="@+id/btnSend"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/etTenSV"
        app:layout_constraintRight_toRightOf="@id/tvTieuDe"
        app:layout_constraintLeft_toLeftOf="@id/tvTieuDe"/>

</androidx.constraintlayout.widget.ConstraintLayout>