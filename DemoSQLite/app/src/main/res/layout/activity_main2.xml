<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/tvMa"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:gravity="center_vertical"
        android:text="MA:"
        android:textSize="13pt"
        app:layout_constraintBottom_toBottomOf="@id/etMa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etMa"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:hint="khong nhap"
        android:inputType="none"
        android:textSize="13pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvMa"
        app:layout_constraintTop_toTopOf="@id/tvMa" />

    <TextView
        android:id="@+id/tvTen"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:gravity="center_vertical"
        android:text="TEN:"
        android:textSize="13pt"
        app:layout_constraintBottom_toBottomOf="@id/etTen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMa" />

    <EditText
        android:id="@+id/etTen"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:hint="Nhap ten"
        android:textSize="13pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTen"
        app:layout_constraintTop_toTopOf="@id/tvTen" />

    <TextView
        android:id="@+id/tvLop"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:gravity="center_vertical"
        android:text="LOP:"
        android:textSize="13pt"
        app:layout_constraintBottom_toBottomOf="@id/etLop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTen" />

    <EditText
        android:id="@+id/etLop"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:hint="Nhap lop"
        android:textSize="13pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvLop"
        app:layout_constraintTop_toTopOf="@id/tvLop" />

    <Button
        android:id="@+id/btnLuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUU"
        android:textSize="16pt"
        app:cornerRadius="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etLop" />
</androidx.constraintlayout.widget.ConstraintLayout>