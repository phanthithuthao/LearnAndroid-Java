<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Giai phuong trinh bac 1"
        android:textColor="#0000FF"
        android:textSize="16pt"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeSoA"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:gravity="center_vertical"
        android:text="He so a:"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="@id/etA"
        app:layout_constraintLeft_toLeftOf="@id/tvTieuDe"
        app:layout_constraintTop_toBottomOf="@id/tvTieuDe" />

    <EditText
        android:id="@+id/etA"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:textSize="10pt"
        app:layout_constraintLeft_toRightOf="@id/tvHeSoA"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTieuDe"
        app:layout_constraintTop_toTopOf="@id/tvHeSoA" />

    <TextView
        android:id="@+id/tvHeSoB"
        android:layout_width="wrap_content"
        android:layout_height="0pt"
        android:gravity="center_vertical"
        android:text="He so b:"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="@id/etB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etA"

        />

    <EditText
        android:id="@+id/etB"
        android:layout_width="0pt"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10pt"
        app:layout_constraintLeft_toRightOf="@id/tvHeSoB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etA"
        app:layout_constraintTop_toTopOf="@+id/tvHeSoB" />

    <Button
        android:id="@+id/btnTimX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#C0C0C0"
        android:text="Tim Nghiem X"
        android:textColor="@color/black"
        android:textSize="15pt"
        app:cornerRadius="0dp"
        app:layout_constraintLeft_toLeftOf="@id/tvTieuDe"
        app:layout_constraintRight_toRightOf="@id/tvTieuDe"
        app:layout_constraintTop_toBottomOf="@id/etB" />

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#808080"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="Ket Qua: "
        android:textSize="10pt"
        app:layout_constraintLeft_toLeftOf="@id/tvTieuDe"
        app:layout_constraintRight_toRightOf="@id/tvTieuDe"
        app:layout_constraintTop_toBottomOf="@id/btnTimX" />
</androidx.constraintlayout.widget.ConstraintLayout>